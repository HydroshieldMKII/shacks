{
    "manifest_version": 3,
    "name": "Trust",
    "version": "1.0.0",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "cookies",
        "storage"
    ],
    "host_permissions": [
        "https://api-dev.trust.hydroshield.dev/*",
        "http://localhost:*/*",
        "https://localhost:*/*"
    ]
}